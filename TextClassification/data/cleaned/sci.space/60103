 until $word ne $oldword $word /^$prefix/i ++$i b'$word s/^$prefix/$prefix/i;' b'$word;' b'}' b'elsif (length($prefix) b'local(*w) $prefix;' b'do b'} until $word ne $oldword vec($w{$word}, $off, ++$i b'$word "\\u\\l$word" if $word tr/a-z/a-z/;' b'$word;' b'}' b'else b'local(*w) substr($oldword,0,1);' b'do b'} until $word ne $oldword $word tr/a-z/a-z/ ++$i b'$word;' b'}' b'}' b'' b'' b'"it\'s an ill wind that gathers no moss."' b'' b'' 